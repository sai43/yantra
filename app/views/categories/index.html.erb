<div class="container">
    <% @categories.each_slice(3) do |list| %>
      <div class="row">
        <% list.each do |category| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <div class="image-grid">
                <% Product.where(category: category).each do |product| %>
                  <%= image_tag product.image.url(:thumb), class: 'product-thumb' %>
                <% end %>
              </div>
              <div class="caption">
                <h3><%= link_to  category.name, category_path(category), class: 'btn btn-primary' %></h3>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  <% end %>
</div>



