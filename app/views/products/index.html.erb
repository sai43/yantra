<p id="notice"><%= notice %></p>

  <% @products.each_slice(3) do |list| %>
      <div class="row">
        <% list.each do |product| %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                  <%= image_tag product.image.url(:medium), class: 'img-responsive' %>
                <div class="caption">
                  <p><%= product.description %></p>
                  <h3><%= link_to  product.title, product %></h3>
                  <!--<p><#%= link_to 'Show', product, class: 'btn btn-primary' %></p>-->
                  <!--<p><#%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %></p>-->
                  <!--<p><#%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></p>-->
                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>

